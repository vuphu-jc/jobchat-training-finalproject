<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.home.HomeActivity"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/headerRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height">

            <ImageView
                android:layout_width="@dimen/large_4"
                android:layout_height="match_parent"
                android:src="@drawable/ic_logo" />

            <ImageView
                android:id="@+id/searchImageView"
                android:layout_width="@dimen/normal_5"
                android:layout_height="@dimen/normal_5"
                android:src="@drawable/ic_search"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/normal_5"
                style="@style/CircleEffectOnClick" />

        </RelativeLayout>

    </FrameLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabsTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorSelectedIcon" />

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="-1dp"
        android:layout_height="@dimen/small_1"
        android:background="@color/colorFooterOfHeader" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/mainViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>